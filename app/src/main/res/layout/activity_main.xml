<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- State UI - Top -->
            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:text="MainActivity Page"
                android:theme="@style/headerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_4sdp"
                android:theme="@style/lineVertical"
                android:layout_width="100dp"
                android:layout_height="0.5dp"/>
            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:text="Ini adalah halaman MainActivity"
                android:theme="@style/bodyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- State UI - Mid -->
            <LinearLayout
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- State - Item #01 -->
                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/_4sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/gendut_idaman"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"/>
                        <TextView
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:text="Gendut Idaman (\@gendut.idaman)"
                            android:theme="@style/bodyText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:text="gdtidm\@gmail.com"
                            android:theme="@style/bodyText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <RatingBar
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_12sdp"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="4.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- State - Item #02 -->
                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/_4sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/gendut_idaman"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"/>
                        <TextView
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:text="Gendut Idaman (\@gendut.idaman)"
                            android:theme="@style/bodyText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:text="gdtidm\@gmail.com"
                            android:theme="@style/bodyText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <RatingBar
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_12sdp"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="4.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- State - Item #03 -->
                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/_4sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/gendut_idaman"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"/>
                        <TextView
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:text="Gendut Idaman (\@gendut.idaman)"
                            android:theme="@style/bodyText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:text="gdtidm\@gmail.com"
                            android:theme="@style/bodyText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <RatingBar
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_12sdp"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="4.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- State UI - Bottom -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Dikembangkan oleh :\n\@gendut.idaman"
                    android:textAlignment="center"
                    android:theme="@style/bodyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>