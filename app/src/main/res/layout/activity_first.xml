<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".First">

    <LinearLayout
        android:layout_margin="@dimen/_16sdp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- State UI - Top -->
        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:text="First Page"
            android:theme="@style/headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_4sdp"
            android:theme="@style/lineVertical"
            android:layout_width="100dp"
            android:layout_height="0.5dp"/>
        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:text="Ini adalah halaman First"
            android:theme="@style/bodyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- State UI - Mid -->
        <Button
            android:id="@+id/btn_move"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_48sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:padding="@dimen/_8sdp"
            android:text="Move Now"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/light_montserrat"
            android:textSize="@dimen/_12sdp"
            android:layout_width="@dimen/_124sdp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>